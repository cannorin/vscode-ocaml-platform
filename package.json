{
  "name": "ocaml-platform",
  "displayName": "OCaml Platform",
  "description": "Official OCaml Support from OCamlLabs",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocamllabs/vscode-ocaml-platform"
  },
  "bugs": {
    "url": "https://github.com/ocamllabs/vscode-ocaml-platform/issues"
  },
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ocaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "OCaml configuration",
      "properties": {
        "merlin.refmt.width": {
          "type": [
            "number",
            null
          ],
          "default": null,
          "description": "Set the width of lines when formatting code with refmt"
        },
        "ocaml.lsp.path": {
          "type": "string",
          "default": "ocamllsp",
          "description": "Path to the LSP binary"
        }
      }
    },
    "problemMatchers": [
      {
        "name": "ocamlc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": [
          {
            "regexp": "^\\s*\\bFile\\b\\s*\"(.*)\",\\s*\\bline\\b\\s*(\\d+),\\s*\\bcharacters\\b\\s*(\\d+)-(\\d+)\\s*:\\s*$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endColumn": 4
          },
          {
            "regexp": "^(?:\\s*\\bParse\\b\\s*)?\\s*\\b([Ee]rror|Warning)\\b\\s*(?:\\(\\s*\\bwarning\\b\\s*(\\d+)\\))?\\s*:\\s*(.*)$",
            "severity": 1,
            "code": 2,
            "message": 3
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "ocaml",
        "aliases": [
          "OCaml",
          "ocaml"
        ],
        "extensions": [
          ".ml",
          ".mli",
          ".ocamlinit"
        ],
        "configuration": "./language/ocaml.json"
      },
      {
        "id": "ocaml.opam",
        "extensions": [
          ".opam"
        ],
        "configuration": "./language/opam.json"
      },
      {
        "id": "ocaml.dune",
        "aliases": [
          "dune"
        ],
        "extensions": [
          "dune",
          "jbuild"
        ],
        "configuration": "./language/dune.json"
      },
      {
        "id": "ocaml.duneproject",
        "aliases": [
          "dune project"
        ],
        "extensions": [
          "dune-project"
        ],
        "configuration": "./language/dune.json"
      },
      {
        "id": "ocaml.menhir",
        "aliases": [
          "Menhir",
          "menhir"
        ],
        "extensions": [
          ".mly"
        ]
      },
      {
        "id": "ocaml.ocamllex",
        "aliases": [
          "OCamllex",
          "ocamllex"
        ],
        "extensions": [
          ".mll"
        ]
      }
    ],
    "grammars": [
      {
        "language": "ocaml",
        "scopeName": "source.ocaml",
        "path": "./syntax/ocaml.json"
      },
      {
        "language": "ocaml.opam",
        "scopeName": "source.ocaml.opam",
        "path": "./syntax/opam.tmLanguage.json"
      },
      {
        "scopeName": "markdown.ocaml.codeblock",
        "path": "./syntax/ocaml-markdown-codeblock.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.ocaml": "ocaml"
        }
      },
      {
        "language": "ocaml.dune",
        "scopeName": "source.dune",
        "path": "./syntax/Dune.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "ocaml",
        "path": "./snippets/ocaml.json"
      }
    ]
  },
  "scripts": {
    "clean": "bsb -clean",
    "build:bsb": "bsb -make-world",
    "build:webpack": "webpack --mode production",
    "build": "npm run build:bsb && npm run build:webpack",
    "watch:bsb": "bsb -make-world -w",
    "watch:webpack": "webpack --mode development --watch",
    "watch": "run-p watch:bsb watch:webpack",
    "test:bsb": "node ./test/runBsbTests.js",
    "test:esy": "node ./test/runEsyTests.js",
    "test:unit": "npm run build:bsb && jest src/",
    "test:opam": "node ./test/runOpamTests.js",
    "test": "npm run test:unit && npm run test:opam ",
    "fmt:refmt": "find ./src ./fixtures ./__tests__ -type f -name \"*.re\" | xargs bsrefmt --in-place",
    "fmt:prettier": "prettier --write \"**/*.{json,md,ts,yml}\"",
    "fmt": "yarn run fmt:refmt; yarn run fmt:prettier",
    "vscode:prepublish": "yarn run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^12.12.14",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "1.19.1",
    "typescript": "^3.7.3",
    "vscode-test": "^1.2.3",
    "@glennsl/bs-jest": "^0.4.9",
    "@glennsl/bs-json": "^5.0.1",
    "bs-platform": "^7.0.1",
    "fs-extra": "^8.1.0",
    "jest-cli": "^24.9.0",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "vsce": "^1.71.0",
    "webpack": "^4.41.5",
    "vscode": "^1.1.36",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "uuid": "^3.3.3",
    "vscode-languageclient": "^5.2.1"
  },
  "publisher": "ocamllabs"
}
